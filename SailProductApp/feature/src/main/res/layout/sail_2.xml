<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bspmain_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:onClick="getJSON"
            android:text="getdata" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="383dp"
            android:layout_height="187dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/parsedata"
            android:layout_marginBottom="66dp"
            android:layout_marginStart="-98dp"
            android:text="TextView" />

        <Button
            android:id="@+id/parsedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="141dp"
            android:onClick="parseJSON"
            android:text="jsondata" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="181dp"
            android:layout_height="163dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/wheeljpg" />

        <TextView
            android:id="@+id/bsptextView"
            android:layout_width="357dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="202dp"
            android:gravity="center"
            android:text="Product produce under Bhilai Steel Plant (BSP)"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="104dp"
            android:layout_height="97dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/sailbhilai" />

        <Button
            android:id="@+id/bspbutton"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/producttextView"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="-59dp"
            android:onClick="bspbutton"
            android:text="Back" />


        <ImageView
            android:id="@+id/button"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="13dp"
            android:onClick="bspbutton"
            android:src="@drawable/iconbackpng" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.093"
        android:background="@drawable/logsailwater"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>